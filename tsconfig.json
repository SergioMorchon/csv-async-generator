{
  "compilerOptions": {
    "lib": ["es2023"],
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "strict": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmit": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src"],
  "exclude": ["**/__tests__"]
}
